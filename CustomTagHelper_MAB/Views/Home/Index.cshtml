@addTagHelper *, CustomTagHelper_MAB

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Tag Helpers</title>
</head>
<body>

    <h2>MyTagHelperA (Hyperlink)</h2>
    <mytag class="btn btn-info rounded" path="https://www.darhan.ac.in/" alt-text="Example Link"></mytag>

    <h2>MyTagHelperB (Button)</h2>
    <mybutton class="btn rounded-2 shadow-lg" bg-color="lightblue">Change to Blue</mybutton>
    <mybutton class="btn rounded-2 shadow-lg" bg-color="lightcoral">Change to Coral</mybutton>
    <mybutton class="btn rounded-2 shadow-lg" bg-color="lightgreen">Change to Green</mybutton>

</body>
</html>
